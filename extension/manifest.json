{
  "name": "Gimme",
  "description": "PGA Scorecard pop-up chrome extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "debugger",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://api.sportsdata.io/golf/v2/json/Leaderboard",
    "https://api.sportsdata.io/golf/v2/json/CurrentSeason",
    "https://api.sportsdata.io/golf/v2/json/Tournaments", 
    "https://localhost:3434/api/test"
  ],
  "action": {
    "default_popup": "/popup.html",
    "default_title": "Gimme"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "json": ["./dist/bundle.js"],
      "css": ["src/styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/tournamentDetails/tournamentDetails.html", "src/courseDetails/courseDetails.html"],
      "matches": ["<all_urls>"] 
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}